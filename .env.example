# API key for accessing models via OpenRouter
# Get your API key from: https://openrouter.ai/keys
OPENAI_API_KEY=your-openrouter-api-key-here

# Base URL for OpenRouter API
OPENAI_BASE_URL=https://openrouter.ai/api/v1

# Whisper model for audio transcription via OpenRouter
OPENAI_WHISPER_MODEL=google/gemini-2.5-flash

# Model for text summarization (examples: anthropic/claude-3-haiku, openai/gpt-4o-mini)
OPENAI_SUMMARY_MODEL=google/gemini-2.5-pro

# Path to summarization prompt file (default: summarization_prompt.md)
PROMPT_FILE=summarization_prompt.md
